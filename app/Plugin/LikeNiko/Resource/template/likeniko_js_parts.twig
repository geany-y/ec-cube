<script src="{{ app.config.front_urlpath }}../../../plugin/likeniko/assets/js/jquery.cbiframesize.min.js"></script>
<script>
(function($){
    function dummyCallBack(data){
        if (data) {
            alert(data);
        }
    }

    function pushNikoMessage(mess, url, cb){
        $.ajax({
            type: "POST",
            url: url,
            dataType: "html",
            data: {'niko' : mess},
            success: function(data){
                cb(data);
            },
            error: function(){
                alert("失敗");
            }
        });
    }
    $('#likeniko_save').click(function(){
        var url = "{{ url('publish') }}";
        var nikomessage = $('#likeniko_nikomessage').val();
        $('#likeniko_nikomessage').val('');
        
        //alert(nikomessage);
        
        pushNikoMessage(nikomessage, url, dummyCallBack);
    });
    $("#iframe-wrap").cbIframeSize();
})(jQuery);