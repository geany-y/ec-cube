{% extends 'default_frame.twig' %}

{% set menus = ['content', 'nikoinfo'] %}

{% block title %}コンテンツ管理{% endblock %}
{% block sub_title %}ニコ動画風コメント機能設定{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}

    <div class="row" id="aside_wrap">
        <form name="form1" role="form" class="form-horizontal" id="nikoinfo_form" method="post" action="{{ url('nikoinfo') }}">
        {{ form_widget(form._token) }}
        {{ form_widget(form.id) }}
            <div class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">基本設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">コメント書き込み権限</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.is_auth_flg) }}
                                {{ form_errors(form.is_auth_flg) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">コメント挿入するhtml要素(id or class)</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.form_insert_key) }}
                                {{ form_errors(form.form_insert_key) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">NodeJs URL</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.node_server_address) }}
                                {{ form_errors(form.node_server_address) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">コメント表示対象画像設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">iframe 差し替え要素(id or class)</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.replace_block_key) }}
                                {{ form_errors(form.replace_block_key) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">対象画像名</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.target_img_name) }}
                                {{ form_errors(form.target_img_name) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">画像の高さ</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.target_img_height) }}
                                {{ form_errors(form.target_img_height) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-lg-3">画像の幅</div>
                            <div class="col-sm-9 col-lg-9">
                                {{ form_widget(form.target_img_width) }}
                                {{ form_errors(form.target_img_width) }}
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-3" id="aside_column">
                <div class="col_inner">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                        <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">登録</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

{% endblock %}